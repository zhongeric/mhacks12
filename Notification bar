//notification bar


let view = UILabel()

view.frame = CGRect(x: 0, y: 0, width: 345, height: 726)

view.backgroundColor = .white

self.view = view


view.layer.backgroundColor = UIColor(red: 0.9, green: 0.9, blue: 0.9, alpha: 0.67).cgColor

view.layer.cornerRadius = 20


let parent = self.view!

parent.addSubview(view)

view.translatesAutoresizingMaskIntoConstraints = false

view.widthAnchor.constraint(equalToConstant: 345).isActive = true

view.heightAnchor.constraint(equalToConstant: 726).isActive = true

view.leadingAnchor.constraint(equalTo: parent.leadingAnchor, constant: 66).isActive = true

view.topAnchor.constraint(equalTo: parent.topAnchor, constant: 0).isActive = true


